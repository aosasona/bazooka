---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="max-w-6xl px-4 mt-6 md:mt-14 mx-auto">
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
	}
	body {
		@apply bg-black text-sm text-zinc-200 antialiased;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
			DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}
	button {
		@apply cursor-pointer hover:opacity-60 transition-all;
	}
	::-webkit-scrollbar {
		width: 8px;
	}
	.display-title {
		@apply w-full border-t border-t-neutral-900 text-sm text-neutral-500 font-medium grid grid-cols-2 sm:grid-cols-3 items-center;
	}
	.display-title p {
		@apply border-r border-r-neutral-900 select-none py-2.5 px-3;
	}

	.display-title p:last-child {
		@apply hidden sm:block;
	}
</style>
